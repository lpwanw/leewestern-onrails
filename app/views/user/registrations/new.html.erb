<h1 class="font-bold mt-2">Sign up with your email</h1>
<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: {
               turbo: false,
               class: "w-full mt-2"
             }) do |f| %>
  <div class="mt-2">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder: "Email",
                      class: "py-4 px-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <%= render Model::ErrorMessage.new(resource, :email) %>
  </div>
  <div class="mt-2">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password,
                         autocomplete: "new-password",
                         placeholder: "Password (#{ @minimum_password_length } characters minimum)",
                         class: "py-4 px-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <%= render Model::ErrorMessage.new(resource, :password) %>
  </div>
  <div class="mt-2">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         placeholder: "Password confirmation",
                         class: "py-4 px-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <%= render Model::ErrorMessage.new(resource, :password_confirmation) %>
  </div>
  <%= f.submit "Sign up", class: "cursor-pointer w-full rounded-xl py-4 flex justify-center bg-gray-950 mt-2 text-gray-50 dark:bg-gray-50 dark:text-gray-950" %>
<% end %>
<%= render "user/shared/links" %>

<h1 class="font-bold mt-2">Change your password</h1>
<%= form_for(resource,
             as: resource_name,
             url: password_path(resource_name),
             html: {
               method: :put,
               class: "w-full"
             }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="mt-2">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password,
                         autocomplete: "new-password",
                         placeholder: "New password (#{ @minimum_password_length } characters minimum)",
                         class: "py-4 px-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <%= render Model::ErrorMessage.new(resource, :password) %>
  </div>
  <div class="mt-2">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         placeholder: "New password confirmation",
                         class: "py-4 px-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <%= render Model::ErrorMessage.new(resource, :password_confirmation) %>
  </div>
    <%= f.submit "Change my password", class: "cursor-pointer w-full rounded-xl py-4 flex justify-center bg-gray-950 mt-2 text-gray-50 dark:bg-gray-50 dark:text-gray-950" %>
<% end %>
<%= render "user/shared/links" %>

<div class="w-screen h-screen flex flex-col md:max-w-3xl">
  <div class="w-full flex justify-center py-2">
    <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown" class="text-gray-950 font-medium text-sm px-5 py-2.5 text-center inline-flex items-center" type="button">
      For You
      <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4" />
      </svg>
    </button>
    <!-- Dropdown menu -->
    <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg border w-44 dark:bg-gray-700">
      <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
        <li>
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Dashboard</a>
        </li>
        <li>
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Settings</a>
        </li>
        <li>
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Earnings</a>
        </li>
        <li>
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Sign out</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="grow rounded-lg border divide-y divide-gray-200 overflow-y-auto">
    <%= turbo_frame_tag :posts, class: "block divide-y divide-gray-200" do %>
      <%= render @posts %>
    <% end %>
    <%= turbo_frame_tag :load_more, loading: :lazy, src: posts_path(format: :turbo_stream) %>
  </div>
</div>

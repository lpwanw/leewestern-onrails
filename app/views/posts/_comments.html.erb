<% post.comments.each do |comment| %>
  <div class="bg-white shadow-md rounded-lg p-4 mb-4">
    <div class="flex justify-between items-center mb-2">
      <h4 class="text-lg font-semibold text-gray-800"><%= comment.user.email %></h4>
      <small class="text-sm text-gray-500"><%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></small>
    </div>

    <div class="comment-content text-gray-700 mb-4">
      <%= simple_format(comment.body, class: "mb-2") %>
    </div>
  </div>
<% end %>

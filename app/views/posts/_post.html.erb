<div class="flex gap-2 w-full px-3 py-2 bg-white hover:bg-gray-100 dark:bg-gray-800 dark:hover:bg-gray-700 last:border last:border-gray-200">
  <div>
    <img class="w-6 h-6 rounded-full" src="https://avatar.iran.liara.run/public/<%= post.user_id % 101 %>" alt="Rounded avatar">
  </div>
  <div>
    <div class="w-full flex justify-between">
      <a href="#user" class="block font-semibold hover:underline">
        <%= post.user_email.split("@").first %>
      </a>
    </div>
    <div>
      <a href="#post">
        <%= post.title %>
      </a>
      <div>
        <span class="hover:text-gray-950 hover:underline">Like</span>
        <span class="hover:text-gray-950 hover:underline">Comment</span>
        <span class="hover:text-gray-950 hover:underline">Repost</span>
        <span class="hover:text-gray-950 hover:underline">Share</span>
      </div>
    </div>
  </div>
</div>

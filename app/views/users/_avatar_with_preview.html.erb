<% following = current_user.following?(user) || user.id == current_user.id %>
<%= link_to following ? user_path(user) : modal_user_path(user),
            data: {
              turbo_frame: following ? "_top" : "modal",
            } do %>
  <div class="group relative w-fit h-fit p-1">
    <%= avatar_tag user, class: "w-6 h-6 md:w-10 md:h-10 rounded-full", alt: "User Avatar" %>
    <% if current_user.id != user.id && !current_user.following?(user) %>
      <button class="group-hover:scale-110 absolute bottom-0 right-0 bg-black text-white border-white border-2 rounded-full w-4 h-4 md:w-5 md:h-5 flex items-center justify-center">
        <%= render_inline_svg "icon/add.svg", class: "w-3 h-3 md:w-4 md:h-4 text-white" %>
      </button>
    <% end %>
  </div>
<% end %>

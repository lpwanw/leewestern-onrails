<%= render "shared/modal_container" do %>
  <div class="flex flex-col items-start p-6 min-w-[380px]">
    <%= link_to user_path(@user), data: { turbo_frame: "_top" }, class: "flex items-center justify-between w-full cursor-pointer" do %>
        <div class="flex flex-col">
          <h2 class="text-2xl font-bold"><%= @user.email.split("@").first %></h2>
          <p class="text-gray-600"><%= @user.email.split("@").first %></p>
        </div>
        <img class="w-10 h-10 md:w-16 md:h-16 rounded-full" src="<%= avatar_placeholder_url(@user) %>" alt="Rounded avatar">
      <% end %>

    <p class="text-gray-800 mt-4"><%= FFaker::Lorem.word %></p>
    <p class="text-sm text-gray-500 mb-6"><%= pluralize(rand(100), "follower") %></p>
    <button class="w-full bg-black text-white px-4 py-2 rounded-xl hover:bg-gray-800">Follow</button>
  </div>
<% end %>

<% return if user.remind_action_count.zero? %>

<div class="px-6 py-4 flex justify-between">
  <h3 class="font-bold">Finish your profile</h3>
  <p class="text-sm text-gray-600"><%= user.remind_action_count %> left</p>
</div>

<div class="grid grid-cols-3 gap-4 px-6 pb-2 border-b">
  <%= render "users/add_profile_photo_action" unless user.avatar_added? %>
  <%= render "users/add_bio_action" unless user.bio_added? %>
</div>

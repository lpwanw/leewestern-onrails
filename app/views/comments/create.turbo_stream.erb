<%= render_turbo_flash_messages %>
<%= turbo_stream.replace :modal, partial: "shared/empty_turbo_frame", locals: { id: :modal } %>
<% if @comment.reply? %>
  <%= turbo_stream.append "comments_#{@comment.commentable_type.underscore}_#{@comment.commentable_id}",
                           partial: "comments/comment_reply",
                           locals: { comment: @comment, enter_screen: true }
  %>
<% else %>
  <%= turbo_stream.prepend "comments_#{@comment.commentable_type.underscore}_#{@comment.commentable_id}",
                           partial: "comments/comment",
                           locals: { comment: @comment, enter_screen: true }
  %>
<% end %>

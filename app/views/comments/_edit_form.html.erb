<%= turbo_frame_tag dom_id(comment) do %>
  <div class="rounded-md flex px-4 pt-4">
    <div class="shrink-0 flex flex-col items-center gap-2">
      <%= avatar_tag current_user, class: "w-10 h-10 rounded-full" %>
    </div>
    <%= form_for comment,
                 html: {
                   class: "grow pl-2",
                 } do |f| %>
      <div class="w-full flex justify-between">
        <span class="block font-semibold">
          <%= current_user.name %>
        </span>
      </div>
      <div class="comment_content">
        <%= f.rich_text_area :content %>
      </div>
      <div class="flex gap-1 mt-2">
        <%= f.submit class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
        <%= link_to "Cancel", comment, class: "text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      </div>
    <% end %>
  </div>
<% end %>
